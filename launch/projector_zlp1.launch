<launch>

    <arg name="namespace" value="projector_zlp1"/>
    <arg name="load_user_coordinate_system" default="false"/>

    <group ns="$(arg namespace)">

        <rosparam file="$(find z_laser_projector)/config/communication_settings.yaml"/>

        <rosparam if ="$(eval arg('load_user_coordinate_system'))"
            file="$(find z_laser_projector)/config/user_coordinate_system.yaml"/> 

        <rosparam unless ="$(eval arg('load_user_coordinate_system'))"
            file="$(find z_laser_projector)/config/factory_coordinate_system.yaml"/>

        <node name="zlp_node" pkg="z_laser_projector" type="zlp_node.py" output="screen"/>

    </group>

</launch>